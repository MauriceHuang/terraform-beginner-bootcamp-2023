#!/bin/bash
#!/usr/bin/env bash

#!/bin/bash

# Directory where the credentials file should be saved
TARGET_DIR="/home/gitpod/.terraform.d"

# Check if TERRAFORM_CLOUD_TOKEN is set
if [ -z "$TERRAFORM_CLOUD_TOKEN" ]; then
    echo "Error: TERRAFORM_CLOUD_TOKEN environment variable is not set."
    exit 1
fi

# Create the directory if it doesn't exist
mkdir -p "$TARGET_DIR"

# Generate credentials.tfrc.json in the target directory
cat <<EOL > "$TARGET_DIR/credentials.tfrc.json"
{
  "credentials": {
    "app.terraform.io": {
      "token": "$TERRAFORM_CLOUD_TOKEN"
    }
  }
}
EOL

echo "credentials.tfrc.json has been generated successfully in $TARGET_DIR."
